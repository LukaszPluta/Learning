{% extends 'base2.html.twig' %}

{% block title %}Autor index{% endblock %}

{% block body %}
    <h1>Autor index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Imie</th>
                <th>Nazwisko</th>
                <th>Kraj</th>
                <th>RokUrodzenia</th>
                <th>RokSmierci</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for autor in autors %}
            <tr>
                <td>{{ autor.id }}</td>
                <td>{{ autor.imie }}</td>
                <td>{{ autor.nazwisko }}</td>
                <td>{{ autor.kraj }}</td>
                <td>{{ autor.rokUrodzenia }}</td>
                <td>{{ autor.rokSmierci }}</td>
                <td>
                    <a href="{{ path('autor_show', {'id': autor.id}) }}">show</a>
                    <a href="{{ path('autor_edit', {'id': autor.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('autor_new') }}">Create new</a>
{% endblock %}
