{% extends 'base.html.twig' %}

{% block title %}{{ product_category.name }}{% endblock %}

{% block body %}
    <h1>ProductCategory</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product_category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product_category.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product_category.description }}</td>
            </tr>
            <tr>
                <th>DateOfCreation</th>
                <td>{{ product_category.dateOfCreation ? product_category.dateOfCreation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DateOfLastModification</th>
                <td>{{ product_category.dateOfLastModification ? product_category.dateOfLastModification|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <table class="table">
    {% for product in product_category.products %}
        <tr>
            <td>{{ product.id }}</td>
            <td>{{ product.name }}</td>
        </tr>
    {% endfor %}
    </table>
    <a href="{{ path('product_category_index') }}">back to list</a>

    <a href="{{ path('product_category_edit', {'id': product_category.id}) }}">edit</a>

    {{ include('product_category/_delete_form.html.twig') }}
{% endblock %}
